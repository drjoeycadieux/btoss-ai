---
import Alerts from "../components/alerts.astro";
import Button from "../components/button.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Tbosss AI</title>
	</head>
	<body>
		<Alerts />
		<div>
			<div class="navbar-main-top navbar">
				<ul>
					<li><p class="title">Tboss AI</p></li>
					<li><a href="/">Home</a></li>
					<li><a href="/docs">Docs</a></li>
					<li><a href="/learn-more">Learn More</a></li>
				</ul>
			</div>
		</div>

		<div class="video-background">
			<video autoplay muted loop>
				<source src="/video-land3.mp4" type="video/mp4" />
				Your browser does not support the video tag.
			</video>
		</div>
		<div>
			<div class="header-main-content header">
				<img
					style="border-radius: 15px;"
					width="300"
					height="300"
					src="/tboss.png"
				/>
				<p>Your Next Generation AI</p>
				<center>
					<Button />
				</center>
			</div>
		</div>

		<div>
			<div class="footer">
				<p>&copy; Copyright 2024 - Tboss-AI</p>
			</div>
		</div>

		<style>
			body {
				padding: 0;
				margin: 0;
				background-color: #161616;
				height: 100%;
				overflow: hidden;
			}

			.navbar-main-top {
				padding: 10px;
				background-color: rgba(0, 0, 0, 0.863);
			}

			.navbar-main-top ul {
				display: block;
			}

			.navbar-main-top ul li {
				display: inline;
				margin: 5px;
			}

			.navbar-main-top ul li a {
				color: white;
				font-family: sans-serif;
				font-size: 19px;
				text-decoration: none;
			}

			.navbar-main-top ul li a a:hover {
				color: lightgray;
				text-decoration: underline;
			}

			.title {
				color: white;
				display: inline;
				font-size: 26px;
				font-family: sans-serif;
				font-weight: bold;
			}

			.header-main-content {
				text-align: center;
				padding: 25px;
			}

			.header-main-content p {
				color: white;
				font-size: 4rem;
				font-family: sans-serif;
				font-weight: bold;
			}

			.footer {
				position: fixed;
				width: 100%;
				margin: auto;
				bottom: 0;
				text-align: center;
			}

			.footer p {
				color: lightgray;
				font-family: sans-serif;
				font-size: 19px;
			}

			.video-background {
				position: fixed;
				top: 50%;
				left: 50%;
				min-width: 100%;
				min-height: 100%;
				width: auto;
				height: auto;
				z-index: -1;
				transform: translate(-50%, -50%);
			}

			video {
				object-fit: cover;
			}
		</style>
	</body>
</html>
